<h1>Lend Me Some Sugar!</h1>
<h2><i>I am your neighbor!</i></h2>

<div id="your-ingredients-list">


</div>

<div id="users-list">
  <h2>All Users</h2>
  <ol>
    <% @users.each do |user| %>
    <li>
      <a href="/users/<%= user.slug %>">
        <%= user.username %> 
        <% if user.id == @current_user.id %>
          (You)
        <% end %>
      </a>
    </li>
    <% end %>
  </ol>
</div>

<div id="ingredients-list">
  <h2>All Ingredients</h2>
  <ol>
    <% @ingredients.each do |ingredient| %>
    <li>
      <a href="/ingredients/<%= ingredient.slug %>">
        <%= ingredient.name %></a>
    </li>
    <% end %>
  </ol>
</div>
<a href="/logout">Log Out</a>