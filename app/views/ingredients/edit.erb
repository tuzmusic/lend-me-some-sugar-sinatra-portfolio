<h1>Edit Your Ingredients</h1>

<form action="/ingredients" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <table>
    <tr>
      <th align="left">Edit</th>
      <th align>Delete</th>
    </tr>
    <ol>
      <% @user.ingredients.each do |ingredient| %>
      <tr>
        <td>
          <input type="text" value="<%= ingredient.name %>" id="<%= ingredient.id %>-field" name="ingredients[][name]">
        </td>
        <td>
          <input type="checkbox" id="<%= ingredient.id %>-box" name="ingredients[][delete]">
          <input type="hidden" value="<%= ingredient.id %>" name="ingredients[][id]">
        </td>
      </tr>
      <% end %>
  </table>

  <input type="submit" id="submit" value="Save">
</form>